{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "umd",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ES2020",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/node_modules/*"
  ]
}
